<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.EmailLoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_login"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f3f3f3"
        app:elevation="0dp">
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/kakao_login"
            android:background="@drawable/kakao_login"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:text="카카오톡"
            android:fontFamily="@font/font"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#575555"
            android:lineSpacingExtra="8sp"
            />

        <Button
            android:id="@+id/naver_login"
            android:background="@drawable/naver_login"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:text="네이버"
            android:fontFamily="@font/font"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#f5f5f5"
            android:lineSpacingExtra="8sp"
            />

        <Button
            android:id="@+id/facebook_login"
            android:background="@drawable/facebook_login"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:text="페이스북"
            android:fontFamily="@font/font"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#f5f5f5"
            android:lineSpacingExtra="8sp"
            />

        <Button
            android:id="@+id/google_login"
            android:background="@drawable/google_login"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:text="구글"
            android:fontFamily="@font/font"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#575555"
                android:lineSpacingExtra="6sp"
                android:gravity="center"
                android:text="이메일로 가입하기"
                android:layout_marginRight="10dp"
                android:id="@+id/email_register"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#575555"
                android:lineSpacingExtra="6sp"
                android:gravity="center"
                android:text="이메일로 로그인하기"
                android:layout_marginLeft="10dp"
                android:id="@+id/email_login"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>